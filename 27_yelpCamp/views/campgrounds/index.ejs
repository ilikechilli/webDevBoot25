
<% layout("layouts/boilerplate") %>


<h1>All Campgrounds</h1>
<div>
  <a href="/campgrounds/new">Add a campground!</a>
</div>
<% for(let ground of campgrounds) { %>
    <div class="card" mb-3>
      <div class="row">
        <div class="col-md-4">
          <img class="img-fluid" src="<%= ground.image %>" alt="image of campground">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <div class="card-title"><%= ground.title %></div>
            <p class="card-text"><%= ground.description %></p>
            <p class="card-text">
              <small class="text-black-50"><%= ground.location %></small>
            </p>
            <a href="/campgrounds/<%= ground.id %>" class="btn btn-primary">View <%= ground.title %></a>
          </div>
        </div>
      </div>
    </div>
<% } %>
 